@model NoteMVCTestNeuro.ViewModels.PagedResult<NoteMVCTestNeuro.Models.Note>

@{
    ViewData["Title"] = "Notes";
}

<h1>Notes</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create new</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Title</th>
            <th>Updated (UTC)</th>
            <th style="width: 260px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var n in Model.Items)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@n.Id">@n.Title</a>
                </td>
                <td>@n.UpdatedUtc.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@n.Id">Details</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@n.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@n.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Pagination" class="d-flex align-items-center gap-2">
    <span class="text-muted">
        Page @Model.Page of @Model.TotalPages (Total: @Model.TotalCount)
    </span>

    <div class="ms-auto d-flex gap-2">
        <a class="btn btn-outline-secondary @(Model.HasPrev ? "" : "disabled")"
           asp-action="Index"
           asp-route-page="@(Model.Page - 1)"
           asp-route-pageSize="@Model.PageSize">
            Prev
        </a>

        <a class="btn btn-outline-secondary @(Model.HasNext ? "" : "disabled")"
           asp-action="Index"
           asp-route-page="@(Model.Page + 1)"
           asp-route-pageSize="@Model.PageSize">
            Next
        </a>
    </div>
</nav>